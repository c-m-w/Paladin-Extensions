<?xml version="1.0" encoding="utf-8"?>
<templates>
  <template type="public" title="andy_emaillog" version_id="10" version_string="1.0"><![CDATA[<xf:title>{{ phrase('emaillog_email_log') }}</xf:title>

{{ phrase('emaillog_limit') }}: {$limit}
<br /><br />

<div class="block-container">
	<div class="block-body">
		<xf:datalist data-xf-init="responsive-data-list">
			<xf:datarow rowtype="header">
				<xf:cell>{{ phrase('emaillog_date') }}</xf:cell>
				<xf:cell>{{ phrase('emaillog_username') }}</xf:cell>
				<xf:cell>{{ phrase('emaillog_email') }}</xf:cell>
				<xf:cell>{{ phrase('emaillog_subject') }}</xf:cell>
			</xf:datarow>
			<xf:foreach loop="$results" value="$result">
				<xf:datarow rowclass="dataList-row--noHover">
					<xf:cell><xf:date time="{$result.email_date}" /></xf:cell>
					<xf:cell>{$result.email_username}</xf:cell>
					<xf:cell>{$result.email_address}</xf:cell>
					<xf:cell>{$result.email_subject}</xf:cell>
				</xf:datarow>
			</xf:foreach>
		</xf:datalist>
	</div>
</div>]]></template>
</templates>
