<?xml version="1.0" encoding="utf-8"?>
<template_modifications>
  <modification type="public" template="message_macros" modification_key="aloph_message_macros" execution_order="10" enabled="1" action="preg_replace">
    <find><![CDATA[#(^.*?<div[^<]+message-avatar.*?)<div class="message-avatar-wrapper">#s]]></find>
    <replace><![CDATA[$0
<xf:include template="aloph_op_ribbon_user_avatar">
	<xf:set var="$post" value="{$post}" />
	<xf:set var="$thread" value="{$thread}" />
	<xf:set var="$originalPosterRibbonEnabled" value="{$originalPosterRibbonEnabled}" />
</xf:include>]]></replace>
  </modification>
  <modification type="public" template="post_macros" modification_key="aloph_op_ribbon_text_public_controls" execution_order="10" enabled="1" action="str_replace">
    <find><![CDATA[<div class="actionBar-set actionBar-set--external">]]></find>
    <replace><![CDATA[<div class="actionBar-set actionBar-set--external">
<xf:include template="aloph_op_ribbon_text_public_controls" />]]></replace>
  </modification>
</template_modifications>
