<?xml version="1.0" encoding="utf-8"?>
<templates>
  <template type="public" title="inline_mod_post_datechange" version_id="2000000" version_string="2.0.0"><![CDATA[<xf:set var="$number" value="{{ $post.position + 1 }}"/>
<xf:title>{{ phrase ('sv_change_date_for_post', {'number': $number}) }}</xf:title>

<xf:form action="{{ link('inline-mod') }}" class="block" ajax="true">
    <div class="block-container">
        <div class="block-body">
            <xf:textboxrow name="datechange" value="{$formatted_date}" label="{{ phrase('sv_new_date') }}" />
            <xf:submitrow icon="save" />
        </div>
    </div>

    <xf:foreach loop="$posts" value="$post">
        <xf:hiddenval name="ids[]">{$post.post_id}</xf:hiddenval>
    </xf:foreach>

    <xf:hiddenval name="type">post</xf:hiddenval>
    <xf:hiddenval name="action">datechange</xf:hiddenval>
    <xf:hiddenval name="confirmed">1</xf:hiddenval>

    <xf:redirect url="{$redirect}" />
</xf:form>]]></template>
</templates>
