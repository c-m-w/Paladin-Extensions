<?xml version="1.0" encoding="utf-8"?>
<template_modifications>
  <modification type="public" template="PAGE_CONTAINER" modification_key="xr_pm_PAGE_CONTAINER_copyright" description="Adds XR PM copyright to footer." execution_order="10" enabled="1" action="str_replace">
    <find><![CDATA[{{ phrase('extra_copyright') }}]]></find>
    <replace><![CDATA[$0 | <a href="https://xr-dev.io" class="u-concealed" dir="ltr" target="_blank">XR Product Manager<span class="copyright"> &copy; 2018 XR Development</span></a>]]></replace>
  </modification>
  <modification type="public" template="account_preferences" modification_key="xr_pm_account_preferences_update_mail" description="Adds a preference for whether or not a user should receive email notifications for product updates." execution_order="10" enabled="1" action="str_replace">
    <find><![CDATA[<xf:option name="option[receive_admin_email]"]]></find>
    <replace><![CDATA[<xf:option name="option[xr_pm_receive_update_email]"
	checked="{$xf.visitor.Option.xr_pm_receive_update_email}"
	label="{{ phrase('xr_pm_receive_update_email') }}"
	hint="{{ phrase('xr_pm_receive_update_email_hint') }}"
/>
$0]]></replace>
  </modification>
  <modification type="public" template="core.less" modification_key="xr_pm_core_less_append" description="Append core_xr_pm.less to core.less" execution_order="10" enabled="1" action="preg_replace">
    <find><![CDATA[/$/]]></find>
    <replace><![CDATA[{{ include('core_xr_pm.less') }}]]></replace>
  </modification>
  <modification type="public" template="helper_js_global" modification_key="xr_pm_helper_js_global_phrase" description="Adds some XRPM phrases to XF.phrases by default. Tricky to use inside &lt;xf:js&gt; as sometimes problematic within an overlay." execution_order="10" enabled="1" action="str_replace">
    <find><![CDATA[month11: "{{ phrase('month_12')|escape('js') }}",]]></find>
    <replace><![CDATA[$0

			xr_pm_buy_for_x: "{{ phrase('xr_pm_buy_for_x')|escape('js') }}",
			xr_pm_renew_for_x: "{{ phrase('xr_pm_renew_for_x')|escape('js') }}",
			xr_pm_get_free_now: "{{ phrase('xr_pm_get_free_now')|escape('js') }}",]]></replace>
  </modification>
  <modification type="admin" template="tools_rebuild" modification_key="xr_pm_tools_rebuild" description="Append product manager rebuilds to the end of the rebuild caches system." execution_order="10" enabled="1" action="str_replace">
    <find><![CDATA[<!--[XF:rebuild_bottom]-->]]></find>
    <replace><![CDATA[$0
<xf:include template="xr_pm_tools_rebuild" />]]></replace>
  </modification>
</template_modifications>
